<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h3 class="mt-5">Add Match</h3>
    <form method="POST" action="/register/match">
        <input type="hidden" name="form_type" value="add_match">
        <div class="mb-3">
            <label for="homeTeamId" class="form-label">Home Team ID</label>
            <input type="number" class="form-control" id="homeTeamId" name="home_team_id" required>
        </div>
        <div class="mb-3">
            <label for="awayTeamId" class="form-label">Away Team ID</label>
            <input type="number" class="form-control" id="awayTeamId" name="away_team_id" required>
        </div>
        <div class="mb-3">
            <label for="leagueIdMatch" class="form-label">League</label>
            <select class="form-select" id="leagueIdMatch" name="league_id" required>
                <% leagues.forEach(league => { %>
                    <option value="<%= league.league_id %>"><%= league.league_name %></option>
                <% }) %>
            </select>
        </div>
        <div class="mb-3">
            <label for="startTime" class="form-label">Start Time</label>
            <input type="datetime-local" class="form-control" id="startTime" name="start_time">
        </div>
        <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <select class="form-select" id="status" name="status">
                <option value="scheduled">Scheduled</option>
                <option value="ongoing">Ongoing</option>
                <option value="completed">Completed</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Match</button>
    </form>
</body>
</html>