<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partlies/head') %>
    <title>Sports Score Interface</title>

    <style>
   

    </style>
    
</head>
<body>

    <div class="container mt-4">
        <!-- Header -->
        <%- include('partlies/header') %>

        <!-- Main Content -->
        <div class="row">
         <!-- Sidebar -->
         <%- include('partlies/aside.ejs') %>
            

            <!-- Main Scoreboard -->

           <!-- Main Scoreboard Navbar -->
            <div class="col-md-9">
                <div class="background">
                    <div class="main-navbtn d-flex bg-light justify-content-between">
                        <a href="/" class="nav-btn-link">
                            <button class="btn btn-hover">All Games</button>
                        </a>
                        <a href="live" class="nav-btn-link">
                            <button class="btn btn-hover">Live Games</button>
                        </a>
                        <button class="btn btn-hover">Matches</button>
                        <button class="btn btn-hover">Table</button>
                    </div>
                </div>

                <!-- Fixtures and Results Tabs -->
                <div class="tabs-container d-flex justify-content-start mt-3 mb-3">
                    <button class="btn btn-tab active-tab">Fixtures</button>
                    <a href="result" class="tab-btn-link">
                        <button class="btn btn-tab">Results</button>
                    </a>
                </div>
            </div>


                            <!-- Fixture Section -->
                <div class="league-list">
                    <% matches.forEach((match, index) => { %>
                        <div class="division-img">
                            <!-- <img src="/img/orange-f.jpeg" alt=""> -->
                            <div class="league-title mt-4"><%= match.league_name %></div>
                        </div>

                        <!-- Each match item gets a unique ID to make it easier to target -->
                        <div class="match-item" id="match-<%= match.match_id %>">
                            <div class="match-time">
                                <span><%= new Date(match.start_time).toLocaleDateString() %></span> <br>
                                <span><%= new Date(match.start_time).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></span>
                            </div>
                            <div class="teams">
                                <div class="team">
                                    <img src="<%= match.home_team_logo %>" alt="">
                                    <span><%= match.home_team_name %></span>
                                </div>
                                <div class="team">
                                    <img src="<%= match.away_team_logo %>" alt="">
                                    <span><%= match.away_team_name %></span>
                                </div>
                            </div>
                            <div class="scores">
                                <i class="bi bi-star"></i>
                            </div>
                        </div>
                    <% }) %>
                </div>



            </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="/assets/js/socket.io.js"></script> 

    <script src="/assets/js/nav.js"></script>
</body>
</html>
